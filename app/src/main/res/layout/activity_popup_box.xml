<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="450dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    tools:context=".PopupBox">

    <Button
        android:id="@+id/btn_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="View Profile" />

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_baseline_accessibility_24" />

    <Button
        android:id="@+id/btn_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_prof"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"

        android:text="CHALLENGE" />

    <Button
        android:id="@+id/btn_ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_challenge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"

        android:text="ANSWER A CHALLENGE" />

    <Button
        android:id="@+id/btn_grad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ans"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="GRADE THE CHALLENGE" />

</RelativeLayout>